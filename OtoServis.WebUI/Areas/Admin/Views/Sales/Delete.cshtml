@model OtoServis.Entities.Models.Sales

@{
    ViewData["Title"] = "Satışı Sil";
}

<h1>Satışı Sil</h1>
<hr />
<h3>Silmek istediğinize emin misiniz?</h3>
<div>
    <h4>Sales</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DateOfSale)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DateOfSale)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Vehicle)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Vehicle.BrandName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Customer)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Customer.Email)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Sil" class="btn btn-danger" /> |
        <a class ="btn btn-outline-dark" asp-action="Index">Kullanıcı Listesine Dön</a>
    </form>
</div>
