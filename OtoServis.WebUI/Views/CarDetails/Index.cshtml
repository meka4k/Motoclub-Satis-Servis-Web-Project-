<body>
	<section class="py-5">
		<div class="container px-4 px-lg-5 my-5">
			<div class="row gx-4 gx-lg-5 align-items-center">
				<div class="col-md-6">
					<div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
						<div class="carousel-item active">
							<img class="d-block w-100" src="/Img/Cars/@Model.Vehicle.Image1" alt="First slide">
						</div>
						<div class="carousel-item">
							<img class="d-block w-100" src="/Img/Cars/@Model.Vehicle.Image2" alt="First slide">
						</div>
						<div class="carousel-item">
							<img class="d-block w-100" src="/Img/Cars/@Model.Vehicle.Image3" alt="First slide">
						</div>

						<a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
							<span class="carousel-control-prev-icon" aria-hidden="true"></span>
							<span class="sr-only">Önceki</span>
						</a>
						<a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
							<span class="carousel-control-next-icon" aria-hidden="true"></span>
							<span class="sr-only">Sonraki</span>
						</a>

					</div>			
				</div>
