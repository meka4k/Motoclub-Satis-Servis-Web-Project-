@model IEnumerable<OtoServis.Entities.Models.Brand>

@{
	ViewData["Title"] = "Markalar";
}

<h1>Markalar</h1>
<hr />
<p>
	<a class="btn btn-outline-primary" asp-action="Create">Yeni Marka Ekle</a>
</p>
<table class="table">
	<thead>
		<tr>
			<th>
				@Html.DisplayNameFor(model => model.Name)
			</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<td>
					@Html.DisplayFor(modelItem => item.Name)
				</td>
				<td>
					<a class="btn btn-warning" asp-action="Edit" asp-route-id="@item.Id">Güncelle</a> |
					<a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Sil</a>
				</td>
			</tr>
		}
	</tbody>
</table>
