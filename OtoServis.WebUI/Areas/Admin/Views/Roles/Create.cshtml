@model OtoServis.Entities.Models.Roles

@{
    ViewData["Title"] = "Rol Ekle";
}

<h1>Rol Ekleme Paneli</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label">Rol İsmi</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <input type="submit" value="Rol ekle" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div class="mt-3">
    <a class="btn btn-outline-dark" asp-action="Index">Rol Listesine Dön</a>
</div>

